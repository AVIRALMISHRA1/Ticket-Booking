# ==============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
PORT=3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/travel_booking
MONGODB_TEST_URI=mongodb://localhost:27017/travel_booking_test

# For production (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/travel_booking?retryWrites=true&w=majority

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Generate strong random keys for production
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
SESSION_SECRET=your_session_secret_key_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_32_characters_long

# ==============================================
# PAYMENT GATEWAY CONFIGURATION
# ==============================================

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Stripe (optional)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Razorpay (for Indian payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@travelwebsite.com

# ==============================================
# API KEYS
# ==============================================

GOOGLE_MAPS_API_KEY=your_google_maps_api_key
WEATHER_API_KEY=your_weather_api_key
CURRENCY_API_KEY=your_currency_api_key

# ==============================================
# CORS CONFIGURATION
# ==============================================

ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.vercel.app

# ==============================================
# CLOUDINARY (for image uploads)
# ==============================================

CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==============================================
# RATE LIMITING & SECURITY
# ==============================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=5242880

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

LOG_LEVEL=info
DEBUG=travel:*
MOCK_PAYMENTS=true
